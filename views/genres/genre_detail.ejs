<h1>Genre: <%= genre.name %></h1>
<div style="margin-left:20px;margin-top:20px">
  <h4>Books</h4>
  <dl>
    <% if(genre_books.length == 0){ %>
      <p>This genre has no books</p>
    <% }else{ %>
      <% genre_books.forEach(function(book){ %>
        <dt><a href="<%= book.url %>"><%= book.title %></a></dt>
        <dd><%= book.summary %></dd>
      <% }); %>
    <% } %>
  </dl>
</div>
